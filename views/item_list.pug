extends layout

block content
  h1= title
  //- alphabetically sort items within each category
  ul(class='list') 
    each item in item_list
      li(class='list-item')
        div(class='list-btn')
          a(href=item.url)= item.name
        div(class='list-btn not-first')
          a(href=item.category.url)= ' [' + item.category.name + ']'
