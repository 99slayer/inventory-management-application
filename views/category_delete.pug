extends layout 

block content 
  h1  #{title}

  if items.length
    p Delete the following items before attempting to delete this category.

    ul(class='list')
      li(class='list-header')
        div ITEMS
      each item in items 
        li(class='list-item')
          div(class='btn')
            a(href=item.url)= item.name

  else 
    p= 'Do you really want to Delete the '+ category.name +' category?'

    form(method='POST' action='')
      div(class='form-group')
        input(class='form-control' type='hidden' name='categoryid' required='true' value=category._id)

      br
      button(type='submit' style='padding: 0px 2px 0px 2px; cursor: pointer;') Delete