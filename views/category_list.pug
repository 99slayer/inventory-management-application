extends layout

block content
  h1= title

  -
    const itemNum = (id) => {
      let count = 0

      item_list.forEach((item) => {
        if (item.category._id.toString() === id.toString()) {
          count += 1
        }
      })

      return count
    }

  ul(class='list')
    each category in category_list
      li(class='list-item')
        div(class='list-btn')
          a(href=category.url)= category.name + ' [' + itemNum(category._id) + ']'
