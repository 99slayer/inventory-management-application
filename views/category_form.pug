extends layout

block content
  h1 #{title}

  form(method='POST' action='' id='category-form')
    div(class='form-group')
      label(for='name') Name:
      input(class='form-control' type='text' placeholder='Name' name='name' value=(undefined === category ? '' : category.name))
    div(class='form-group')
      label(for='description') Description:
      //- [BUG] The textareas value is not being properly rendered when there are errors.
      textarea(class='form-control' form='category-form' cols='60' rows='10' placeholder='Description' name='description' value=(undefined === category ? '' : category.description))
    button(class='' type='submit') Submit 

  if errors
    ul
      for error in errors 
        li!= error.msg